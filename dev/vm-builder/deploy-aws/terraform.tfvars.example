# AWS AMI ID (required)
ami_id = "ami-0f7356d10733466d8"

# Instance configuration
instance_name = "debian13-dev-vm"
instance_type = "t3.small"

# AWS region and profile
aws_region  = "us-west-2"
aws_profile = "default"

# SSH configuration
ssh_key_name = "your-ssh-key-name"  # REPLACE WITH YOUR SSH KEY PAIR NAME
ssh_allowed_cidrs = [
  "0.0.0.0/0"  # WARNING: Allow SSH from anywhere. Restrict this in production!
]

# Environment tag
environment = "development"

# Network configuration (using default VPC)
use_default_vpc = true

# If using custom VPC, set use_default_vpc = false and provide:
# vpc_id    = "vpc-xxxxx"
# subnet_id = "subnet-xxxxx"
